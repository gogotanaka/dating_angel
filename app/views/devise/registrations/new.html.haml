= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  .panel-body
    .row
      .col-md-8.col-md-offset-2
        = devise_error_messages!
    .form-group
      = f.label :email, class: 'control-label col-md-3 col-md-offset-1'
      .col-md-6
        = f.email_field :email, autofocus: true, placeholder: "example@example.com", class: 'form-control'
    .form-group
      = f.label :password, class: 'control-label col-md-3 col-md-offset-1'
      .col-md-6
        = f.password_field :password, autocomplete: "off", class: 'form-control'
    .form-group
      = f.label :password_confirmation, class: 'control-label col-md-3 col-md-offset-1'
      .col-md-6
        = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'
    .form-group
      = f.label :name, class: 'control-label col-md-3 col-md-offset-1'
      .col-md-6
        = f.text_field :name, autofocus: true, placeholder: "Tom", class: 'form-control'
    .form-group
      = f.label :description, class: 'control-label col-md-3 col-md-offset-1'
      .col-md-6
        = f.text_area :description, autofocus: true, placeholder: "example@example.com", class: 'form-control'
    .form-group
      = f.label :avatar, class: 'control-label col-md-3 col-md-offset-1'
      .col-md-6
        = f.file_field :avatar, class: 'form-control'
    .form-group
      .col-md-6
        = f.submit 'プロフィールを追加', class: 'btn btn-info col-md-offset-2'
/   %div

