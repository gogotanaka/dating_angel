#regist-btn.row
  = link_to new_user_registration_path, class: 'btn btn-danger' do
    %i.fa.fa-pencil= ' Registration'

#angels-list.row
  %h2 Angels
  - User.where(angel: true).each do |angel|
    %ul
      %li
        %dl
          %dd
            = link_to angel do
              - image_tag angel.avatar_url, width: '300px'
          %dd= angel.name
          %dd= angel.age
          %dd= angel.description
          %dd= angel.profile

